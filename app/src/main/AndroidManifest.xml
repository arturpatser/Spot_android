<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gridyn.potspot">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="android.support.multidex.MultiDexApplication">

        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.TabsActivity"
            android:theme="@style/AppTheme.Other"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ForgotActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.LoginActivity"/>
        <activity android:name=".activity.SearchCriteriaActivity"
            android:parentActivityName=".activity.TabsActivity"
            android:theme="@style/AppTheme.Other"/>
        <activity android:name=".activity.MessageActivity"
            android:theme="@style/AppTheme.Other"/>
        <activity android:name=".activity.InviteFriendActivity"
            android:theme="@style/AppTheme.Other"/>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/map_key" />

    </application>

</manifest>
