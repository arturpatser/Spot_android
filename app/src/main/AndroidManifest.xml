<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gridyn.potspot">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SignUpActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TabsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.ForgotActivity"
            android:parentActivityName=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchCriteriaActivity"
            android:parentActivityName=".activity.TabsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.MessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.InviteFriendActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.FeedbackActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.PaidSpotsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />
        <activity
            android:name=".activity.YourSpotsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />

        <activity
            android:name=".activity.SearchResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other" />

        <activity android:name=".activity.NotificationDetailsActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.ListingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ListingSettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other"/>

        <activity android:name=".activity.ListingEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other"/>

        <activity android:name=".activity.VerificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other"/>

        <activity android:name=".activity.SpaceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other"/>

        <activity android:name=".activity.ProfileEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity android:name=".activity.PaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Other"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/map_key" />

    </application>

</manifest>