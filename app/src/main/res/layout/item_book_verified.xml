<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="spotName"
            type="String" />

        <variable
            name="message"
            type="String" />

        <variable
            name="isPending"
            type="boolean" />

    </data>

    <RelativeLayout

        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="4dp"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/spot_img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chat_right" />

            <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/host_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@{spotName}"
            android:id="@+id/textView12"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/host_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@{message}"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@{isPending ? @string/pending : @string/available}"
            android:textAllCaps="true"
            android:background="@{isPending ? @drawable/round_bound_black : @drawable/round_bound_green}"
            android:textColor="@color/white"
            android:id="@+id/available"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cross"
            android:id="@+id/remove"
            android:layout_gravity="right|top"
            android:layout_alignParentRight="true"
            android:elevation="4dp"
            android:background="@color/transparent"
            tools:targetApi="lollipop"/>

    </RelativeLayout>
</layout>
