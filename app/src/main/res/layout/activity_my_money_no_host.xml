<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/money_nohost_min"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gridyn.potspot.activity.MyMoneyActivity">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/tv_become_host"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <TextView
            style="@style/WhiteBoldLargeText"
            android:id="@+id/tv_earn_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/earn_money"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/while_sitting"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:layout_gravity="center" />

    </LinearLayout>

    <it.gilvegliach.android.transparenttexttextview.TransparentTextTextView
        style="@style/WhiteBoldLargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/become_a_host_today"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:onClick="onBecomeHostClick"
        android:id="@+id/tv_become_host" />

</RelativeLayout>
